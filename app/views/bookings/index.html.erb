    <div class="container d-flex">
        <% @bookings.each do |booking| %>
                <div class="card me-5" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Ma réservation en cours :</h5>
                    <p class="card-text"><%= booking.status %></p>
                    <p class="card-text"><%= booking.participant_number %></p>
                    <p class="card-text"><%= booking.date %></p>
                    <p class="card-text"><%= booking.comment %></p>
                    <p class="card-text"><%= booking.total_price %></p>
                    <button type="button" class="btn btn-primary text-white"><%= link_to "Annuler", booking_path(booking), method: :delete, data: { confirm: "Êtes-vous sûr de vouloir annuler cette réservation ?" } %></button>
               </div>
               </div>
        <% end %>
    </div>
