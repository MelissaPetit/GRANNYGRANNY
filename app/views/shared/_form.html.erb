<div class="container">
  <div class="mt-3">
    <h2>Intéressé ? Remplis le formulaire pour réserver ton expérience !</h2>
  </div>
  <%= simple_form_for [@offer, @booking] do |f| %>
    <%= f.input :date, as: :string,
    input_html: { data: { controller: "flatpickr"} } %>
    <%= f.input :participant_number %>
    <%= f.input :comment %>
    <%= f.submit %>
  <% end %>
</div>
