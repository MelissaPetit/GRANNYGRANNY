<div class="trait"></div>
<div class="container">
    <h3><%= @offer.title %></h3>
    <p class="offers-category"><%= @offer.category.upcase %></p>
    <div class="image-offer">
        <div id="carouselExampleControls" class="carousel slide text-center" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <%= image_tag @offer.photo_url, class: "rounded-4 d-block w-50 mx-auto" %>
                </div>
                <div class="carousel-item">
                    <%= image_tag @offer.photo2, class: "rounded-4 d-block w-50 mx-auto" %>
                </div>
                <div class="carousel-item">
                    <%= image_tag @offer.photo3, class: "rounded-4 d-block w-25 mx-auto" %>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="description-container">
        <div>
            <h5 class="description">Description :</h5>
            <p class="offer-description"><%= @offer.description %></p>
        </div>
        <div>
            <p><i class="fa-solid fa-users"></i> <%= @offer.capacity %> persons</p>
        </div>
        <div>
            <p><i class="fa-regular fa-clock"></i> <%= @offer.duration.to_i %> h</p>
        </div>
        <div>
            <p><i class="fa-solid fa-location-dot"></i> <%= @offer.address %></p>
        </div>
    </div>
</div>
<br>
<div>
    <%= render "bookings/form" %>
</div>
